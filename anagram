#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int anagram(char *s) {
    int len = strlen(s);
    if (len % 2 != 0) return -1;

    int freq[26] = {0};
    int half = len / 2;

    for (int i = 0; i < half; i++) {
        freq[s[i] - 'a']++;
    }
    for (int i = half; i < len; i++) {
        freq[s[i] - 'a']--;
    }

    int changes = 0;
    for (int i = 0; i < 26; i++) {
        if (freq[i] > 0) changes += freq[i];
    }

    return changes;
}

int main() {
    int t;
    scanf("%d", &t);
    char s[10001];

    while (t--) {
        scanf("%s", s);
        printf("%d\n", anagram(s));
    }

    return 0;
}
